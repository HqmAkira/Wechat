/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 160rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 80rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.swiper {
    height: 421.5rpx;
}

.swiper-item {
  display: block;
  width: 100%;
  height: 100%;
}

.columnText {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.goProblemList{
  margin-top: 20px;
  background-color: burlywood;
  width: 600rpx;
}

.goProblemList[disabled] {
  color: #777777 !important;
  background: burlywood !important;
  opacity: 0.6 !important;
}