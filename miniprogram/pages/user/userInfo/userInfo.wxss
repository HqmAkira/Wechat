/* miniprogram/pages/user/userInfo/userInfo.wxss */
.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 160rpx;
  width: 100%;
  background: rgb(202, 170, 127);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 80rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.commercials {
  border: black;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.advertise {
  text-align: center;
  margin-top: 20rpx;
  width: 700rpx;
  height: 300rpx;
  background-size: contain;
  background-color: peachpuff;
}

.infoSheet {
  background-color: rgb(231, 208, 177);
}

.infoRow {
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.infoRow_Text {
  margin-left: 30rpx;
}

.btnRow {
  display: flex;
  flex-direction: row;
}

.btnMid {
  align-self: center;
  justify-self: center;
}

.btnimage {
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}